<script>
    const arr=[
        'merah', 'kuning', 'hijau', 'abu2',
    ];
    arr.forEach(e =>{
        console.log(e);
    });

    document.write("simsalabim abrakadabra:");

    document.write('<br>');
    
    let tinggi= prompt("mau berapa bintang?");
    for(let baris= 0; baris < tinggi; baris++){
        document.writeln('&nbsp;'.repeat((tinggi-baris)*1) + '*'.repeat(1 * baris) + '<br>')
    }

    document.write("keren kan?")
</script>
